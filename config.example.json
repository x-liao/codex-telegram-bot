{
  "telegram_bot_token": "YOUR_TELEGRAM_BOT_TOKEN",
  "allow_from": [
    "123456789"
  ],
  "codex_bin": "codex",
  "codex_workdir": "workdir",
  "codex_sandbox": "danger-full-access",
  "codex_model": "gpt-5.2-codex",
  "codex_models": [
    "gpt-5.2-codex",
    "gpt-5-codex"
  ],
  "codex_add_dirs": [
    "C:\\Users\\admin\\Desktop"
  ],
  "file_send_enabled": true,
  "file_send_dirs": [
    "C:\\Users\\admin\\Desktop",
    "workdir"
  ],
  "file_send_max_bytes": 52428800,
  "codex_timeout_seconds": 120,
  "media_input_enabled": true,
  "media_input_dir": "telegram/uploads",
  "media_input_max_bytes": 20971520,
  "media_input_max_files": 4,
  "media_history_max_items": 4,
  "local_transcribe_enabled": true,
  "local_transcribe_model": "tiny",
  "local_transcribe_language": "zh",
  "local_transcribe_device": "cpu",
  "local_transcribe_compute_type": "int8",
  "local_transcribe_vad": true,
  "local_transcribe_max_chars": 800,
  "poll_timeout_seconds": 30,
  "log_file": "logs/bot-runtime.log",
  "log_stdout": true,
  "text_preview_chars": 100,
  "session_enabled": true,
  "session_scope": "chat",
  "session_max_messages": 20,
  "session_archive_max": 10,
  "session_title_max_chars": 32,
  "session_entry_max_chars": 2000,
  "session_system_prompt": "You are a direct and practical Telegram assistant. Handle both normal conversation and coding questions. This is a continuous chat; use prior context when answering the current message.",
  "debug_echo_enabled": true,
  "debug_echo_dir": "logs/codex-debug",
  "debug_echo_max_chars": 0
}
